                        "restricted_endpoints": {
                            "description": "List of endpoints/request nouns that are restricted to admin users, or those listed in full_access_account_ids",
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "PATCH": {
                    "default": {},
                    "properties": {
                        "restricted_endpoints": {
                            "description": "List of endpoints/request nouns that are restricted to admin users, or those listed in full_access_account_ids",
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "POST": {
                    "default": {},
                    "properties": {
                        "restricted_endpoints": {
                            "description": "List of endpoints/request nouns that are restricted to admin users, or those listed in full_access_account_ids",
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "PUT": {
                    "default": {},
                    "properties": {
                        "restricted_endpoints": {
                            "description": "List of endpoints/request nouns that are restricted to admin users, or those listed in full_access_account_ids",
                            "type": "array"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        }
    },
    "type": "object"
}
