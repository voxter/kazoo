{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "storage.connection.couchdb_and_postgresql",
    "description": "schema for couchdb and postgresql connection entry",
    "properties": {
        "driver": {
            "enum": [
                "kazoo_couchdb_and_postgresql"
            ]
        },
        "name": {
            "type": "string"
        },
        "settings": {
            "couchdb": {
                "properties": {
                    "connect_options": {
                        "properties": {
                            "keepalive": {
                                "type": "boolean"
                            }
                        },
                        "type": "object"
                    },
                    "connect_timeout": {
                        "type": "integer"
                    },
                    "credentials": {
                        "properties": {
                            "password": {
                                "type": "integer"
                            },
                            "username": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "username",
                            "password"
                        ],
                        "type": "object"
                    },
                    "ip": {
                        "type": "string"
                    },
                    "max_pipeline_size": {
                        "type": "integer"
                    },
                    "max_sessions": {
                        "type": "integer"
                    },
                    "pool": {
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "size": {
                                "type": "integer"
                            }
                        },
                        "required": [
                            "name",
                            "size"
                        ],
                        "type": "object"
                    },
                    "port": {
                        "type": "integer"
                    }
                },
                "required": [
                    "ip",
                    "port"
                ],
                "type": "object"
            },
            "postgresql": {
                "properties": {
                    "connect_timeout": {
                        "type": "integer"
                    },
                    "connection_pool_max_overflow": {
                        "type": "integer"
                    },
                    "connection_pool_size": {
                        "type": "integer"
                    },
                    "credentials": {
                        "properties": {
                            "password": {
                                "type": "string"
                            },
                            "username": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "username",
                            "password"
                        ],
                        "type": "object"
                    },
                    "ip": {
                        "type": "string"
                    },
                    "port": {
                        "type": "integer"
                    }
                },
                "required": [
                    "ip",
                    "port"
                ],
                "type": "object"
            },
            "required": [
                "postgresql",
                "couchdb"
            ],
            "type": "object"
        }
    },
    "required": [
        "driver",
        "settings"
    ],
    "type": "object"
}
