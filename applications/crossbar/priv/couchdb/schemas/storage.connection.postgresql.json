{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "storage.connection.postgresql",
    "description": "schema for postgresql connection entry",
    "properties": {
        "driver": {
            "enum": [
                "kazoo_postgresql"
            ]
        },
        "name": {
            "type": "string"
        },
        "settings": {
            "properties": {
                "connect_timeout": {
                    "type": "integer"
                },
                "connection_pool_max_overflow": {
                    "type": "integer"
                },
                "connection_pool_size": {
                    "type": "integer"
                },
                "credentials": {
                    "properties": {
                        "password": {
                            "type": "string"
                        },
                        "username": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "username",
                        "password"
                    ],
                    "type": "object"
                },
                "ip": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                }
            },
            "required": [
                "ip",
                "port"
            ],
            "type": "object"
        }
    },
    "required": [
        "driver",
        "settings"
    ],
    "type": "object"
}
