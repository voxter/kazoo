{
    "_id": "_design/push_notification_subscriptions",
    "kazoo": {
        "view_map": [
            {
                "classification": "account"
            }
        ]
    },
    "language": "javascript",
    "views": {
        "by_mobile_device": {
            "map": [
                "function(doc) {",
                "  var subscriptions = doc.push_notification_subscriptions;",
                "  if (doc.pvt_type != 'device' || doc.pvt_deleted || !subscriptions) return;",
                "  emit(subscriptions.mobile_device_id, doc);",
                "}"
            ]
        },
        "by_reg_by_subscription": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'push_notification_subscription' || doc.pvt_deleted) return;",
                "  doc.notification_preferences.forEach(function(currentValue) {",
                "    emit([doc.notification_registration_id, currentValue], { user_id: doc.pvt_user_id, app_name: doc.pvt_app_name, notification_type: doc.notification_type, notification_registration_id: doc.notification_registration_id, platform: doc.platform });",
                "  });",
                "}"
            ]
        },
        "by_subscription": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'push_notification_subscription' || doc.pvt_deleted) return;",
                "  doc.notification_preferences.forEach(function(currentValue) {",
                "    emit([currentValue], { app_name: doc.pvt_app_name, notification_type: doc.notification_type, notification_registration_id: doc.notification_registration_id, platform: doc.platform });",
                "  });",
                "}"
            ]
        },
        "by_user_by_subscription": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'push_notification_subscription' || doc.pvt_deleted) return;",
                "  doc.notification_preferences.forEach(function(currentValue) {",
                "    emit([doc.pvt_user_id, currentValue], { app_name: doc.pvt_app_name, notification_type: doc.notification_type, notification_registration_id: doc.notification_registration_id, platform: doc.platform });",
                "  });",
                "}"
            ]
        }
    }
}
